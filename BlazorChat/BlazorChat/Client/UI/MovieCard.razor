@using BlazorChat.Models

@if (Movie is not null)
{



        @if (string.IsNullOrEmpty(Movie.PosterPath))
        {
             <img class="card-img-top"  src="/images/PosterPlaceHolder.png" alt="Movie Poster" width="200px" height="300px" />
        }
        else
        {

            <MudImage Src="@($"https://image.tmdb.org/t/p/w500/{Movie.PosterPath}")" Width="200" Height="300" Alt="Movie Poster" Elevation="25" Class="rounded-lg"  />


        }

    <MudText Style="font-size:smaller" GutterBottom="true"> <b>@Movie.Title </b></MudText>
    @if (string.IsNullOrEmpty(Movie.ReleaseDate))
    {
        <MudText Style="font-size:small"> No Date</MudText>
    }
    else
    {

        <MudText Style="font-size:small"> @DateTime.Parse(Movie.ReleaseDate).ToString("MMMM dd, yyyy")</MudText>
      
    }
    

    <MudButton Variant="Variant.Filled" Color="Color.Secondary" Href="@("/movie/"+Movie.Id)"> Details  </MudButton>


}
else
{

    <div class="card h-100">
        <img class="card-img-top" alt="Movie Poster" src="/images/PosterPlaceHolder.png" />
        <div class="card-body border-top bg-light">
            <h5 class="card-title placeholder-glow">
                <span class="placeholder col-6"></span>
            </h5>
            <p class="card-text placeholder-glow">
                <span class="placeholder col-8"></span>
            </p>
        </div>
        <div class="card-footer text-end">
            <button class="btn btn-primary disabled placeholder col-6">
                Details
            </button>
        </div>
    </div>

}


@code {

	private ElementReference posterCardElement;

	[Parameter]
	public PopularMovie Movie { get; set; }



}
